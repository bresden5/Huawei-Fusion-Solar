{
  "elements": [
    {
      "type": "ValidationTextBox",
      "name": "Username",
      "caption": "FusionSolar Benutzername"
    },
    {
      "type": "PasswordTextBox",
      "name": "Password",
      "caption": "FusionSolar Passwort"
    },
    {
      "type": "NumberSpinner",
      "name": "UpdateInterval",
      "caption": "Update-Intervall (Sekunden)",
      "minimum": 60,
      "maximum": 900
    }
  ],
  "actions": [
    {
      "type": "Button",
      "caption": "Jetzt aktualisieren",
      "onClick": "HFS_Update($id);"
    }
  ],
  "status": [
    { "code": 102, "caption": "Aktiv" },
    { "code": 201, "caption": "Fehler bei Kommunikation" }
  ]
}
