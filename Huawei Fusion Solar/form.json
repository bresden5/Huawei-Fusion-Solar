{
  "elements": [
    {
      "type": "ValidationTextBox",
      "name": "Username",
      "caption": "FusionSolar Benutzername"
    },
    {
      "type": "PasswordTextBox",
      "name": "Password",
      "caption": "FusionSolar Passwort"
    },
    {
      "type": "NumberSpinner",
      "name": "UpdateInterval",
      "caption": "Update-Intervall (Sekunden)",
      "minimum": 60,
      "maximum": 900
    }
  ],
  "actions": [
    {
      "type": "Button",
      "caption": "Jetzt aktualisieren",
      "onClick": "IPS_RequestAction($id, 'Update', 0);"
    }
  ]
}
